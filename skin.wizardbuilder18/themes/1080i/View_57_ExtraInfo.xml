<!-- Foundation -->
<includes>
    <include name="View_57_ExtraInfo">
        <description>List View (id=57)</description>
        <control type="group">
            <include>Animation.Common</include>
            <visible>Control.IsVisible(57)</visible>
			<include>JumpBarHorizontal</include>
			<include>ViewSlideForJumpBar</include>
            <control type="group">
                <control type="list" id="57">
                    <visible>String.Contains(Container.FolderPath,plugin://plugin.program.advanced.launcher/,left) | Container.Content(musicvideos) | Container.Content(artists) | Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes) | Container.Content(actors) | Container.Content(sets) | Container.Content(seasons)</visible>
                    <top>PosterPad</top>
                    <height>PosterH</height>
                    <right>SidePad</right>
                    <width>1100</width>
                    <onleft condition="!Skin.HasSetting(global.kioskmode)">9000</onleft>
                    <onright>1603</onright>
                    <onup>57</onup>
                    <ondown>57</ondown>
                    <focusposition>3</focusposition>
                    <movement>3</movement>
                    <pagecontrol>1603</pagecontrol>
                    <viewtype label="31147">list</viewtype>
                    <scrolltime tween="quadratic">400</scrolltime>
                    <itemlayout width="1100" height="64">
                        <include>50itemlayout</include>
                    </itemlayout>

                    <focusedlayout width="1100" height="64">
                        <control type="group">
                            <visible>!Control.HasFocus(60)</visible>
                            <include>50focuslayout</include>
                        </control>
                        <control type="group">
                            <visible>Control.HasFocus(60)</visible>
                            <include>50itemlayout</include>
                        </control>
                    </focusedlayout>
                </control>
                <control type="scrollbar" id="1603">			   
						<include content="scrollbar_vertical">
							<param name="scrollid" value="1603" />
						</include>
					</control>
            </control>
            <include content="Fanart_Info">
                <param name="posx" value="70" />
            </include>
        </control>
    </include>
    <include name="View_57_ExtraInfo_LowList">
        <description>List View (id=57)</description>
        <control type="group">
            <include>Animation.Common</include>
            <visible>Control.IsVisible(57)</visible>
			<include>JumpBarHorizontal</include>
			<include>ViewSlideForJumpBar</include>
            <control type="group">
                <posy>320</posy>
                <control type="fixedlist" id="57">
                    <visible>String.Contains(Container.FolderPath,plugin://plugin.program.advanced.launcher/,left) | Container.Content(musicvideos) | Container.Content(artists) | Container.Content(movies) | Container.Content(tvshows) | [Container.Content(episodes) + !String.Contains(Container.FolderPath,plugin://,left)] | Container.Content(actors) | Container.Content(sets) | Container.Content(seasons)</visible>
                    <top>PosterPad</top>
                    <height>320</height>
                    <right>SidePad</right>
                    <width>1100</width>
                    <onleft condition="!Skin.HasSetting(global.kioskmode)">9000</onleft>
                    <onright>60</onright>
                    <onup>57</onup>
                    <ondown>57</ondown>
                    <focusposition>2</focusposition>
                    <movement>2</movement>
                    <pagecontrol>60</pagecontrol>
                    <viewtype label="31147">list</viewtype>
                    <scrolltime tween="quadratic">400</scrolltime>
                    <itemlayout width="1100" height="64">
                        <include>50itemlayout</include>
                    </itemlayout>

                    <focusedlayout width="1100" height="64">
                        <control type="group">
                            <visible>!Control.HasFocus(60)</visible>
                            <include>50focuslayout</include>
                        </control>
                        <control type="group">
                            <visible>Control.HasFocus(60)</visible>
                            <include>50itemlayout</include>
                        </control>
                    </focusedlayout>
                </control>
                <control type="scrollbar" id="60">
                    <onback>50</onback>
                    <centerright>60</centerright>
                    <posy>PosterPad</posy>
                    <height>320</height>
                    <width>8</width>
                    <onleft>50</onleft>
                    <onright condition="!Skin.HasSetting(global.kioskmode)">9000</onright>
                    <texturesliderbackground border="4" colordiffuse="Dark4">scrollbar/scrollv.png</texturesliderbackground>
                    <texturesliderbar border="4" colordiffuse="Dark3">scrollbar/scrollv.png</texturesliderbar>
                    <texturesliderbarfocus border="4" colordiffuse="Dark2">scrollbar/scrollv.png</texturesliderbarfocus>
                    <animation effect="fade" start="100" end="33" time="400" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
                </control>
            </control>
            <include content="LowList_Info">
                <param name="left" value="70" />
            </include>
        </control>
