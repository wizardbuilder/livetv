<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.livetv"
       name="livetv"
       version="1.0.8"
       provider-name="easyuse">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.simplejson" version="3.3.0"/>
    </requires>
    <extension point="xbmc.service" library="service.py" start="login"/>
    <extension point="xbmc.python.pluginsource"
               library="run.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
    <summary lang="en">IPTV</summary>
    <description lang="en">IPTV plugin</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.wizardbuilder" name="easyuse" version="1.0" provider-name="wizardbuilder">
	<extension point="xbmc.addon.repository" name="wizardbuilder">
		<info compressed="false">https://raw.githubusercontent.com/wizardbuilder/livetv/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/wizardbuilder/livetv/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/wizardbuilder/livetv/master</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Wizard Builder Repo</summary>
		<description>Wizard Builder repo bla</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
