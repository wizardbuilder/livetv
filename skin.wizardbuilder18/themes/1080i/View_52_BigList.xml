<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>
    <include name="View_52_BigList"><include>View_52_BigList_SinglePane</include></include>
    <include name="View_52_BigList_SinglePane">
        <description>List View (id=52)</description>
        <control type="group">
            <include>Animation.Common</include>
            <visible>Control.IsVisible(52)</visible>
			<include>JumpBarHorizontal</include>
			<include>ViewSlideForJumpBar</include>
            <control type="panel" id="52">
                <top>PosterPad</top>
                <left>180</left>
                <width>1570</width>
                <height>650</height>
                <onleft condition="!Skin.HasSetting(global.kioskmode)">9000</onleft>
                <onright>1626</onright>
                <ondown>52</ondown>
                <onup>52</onup>
                <preloaditems>2</preloaditems>
                <pagecontrol>1626</pagecontrol>
                <orientation>vertical</orientation>
                <viewtype label="537">list</viewtype>
                <scrolltime tween="quadratic">400</scrolltime>
                <itemlayout height="130" width="1570">
                    <include>View_52_BigList_ItemLayout</include>
                </itemlayout>

                <focusedlayout height="130" width="1570">
                    <include>View_52_BigList_FocusLayout</include>
                </focusedlayout>
            </control>
            <control type="group">
                <animation effect="slide" start="-100" end="-100" condition="true">Conditional</animation>
                <control type="scrollbar" id="1626">
				<include content="scrollbar_vertical">
				<param name="scrollid" value="1626" />
				</include>
			</control>
            </control>
        </control>
    </include>
    <include name="View_52_BigList_DoublePane">
        <description>List View (id=52)</description>
        <control type="group">
            <include>Animation.Common</include>
            <visible>Control.IsVisible(52)</visible>
			<include>JumpBarHorizontal</include>
			<include>ViewSlideForJumpBar</include>
            <control type="panel" id="52">
                <top>PosterPad</top>
                <left>SidePad</left>
                <width>1770</width>
                <height>650</height>
                <onleft condition="!Skin.HasSetting(global.kioskmode)">9000</onleft>
                <onright>1625</onright>
                <ondown>52</ondown>
                <onup>52</onup>
                <preloaditems>2</preloaditems>
                <pagecontrol>1625</pagecontrol>
                <orientation>vertical</orientation>
                <viewtype label="537">list</viewtype>
                <scrolltime tween="quadratic">400</scrolltime>
                <itemlayout height="130" width="885">
                    <control type="image">
                        <left>0</left>
                        <right>8</right>
						<top>0</top>
                        <bottom>8</bottom>
                        
                        <texture border="5" colordiffuse="Box2">common/box2.png</texture>
						<visible>!Skin.HasSetting(thumbnails.white)</visible>
                    </control>
					<control type="image">
                        <left>1</left>
						<top>1</top>
                        <right>9</right>
                        <height>120</height>
                        <texture border="5" colordiffuse="Dark4">common/box.png</texture>
                    </control>
                    <include>View_52_BigList_ItemLayout</include>
                </itemlayout>

                <focusedlayout height="130" width="885">
                    <include>View_52_BigList_FocusLayout</include>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="1625">
				<include content="scrollbar_vertical">
				<param name="scrollid" value="1625" />
				</include>
			</control>
        </control>
    </include>
    <include name="View_52_BigList_ItemLayout">
        <control type="image">
            <left>10</left>
            <top>10</top>
            <width>100</width>
            <height>100</height>
            <aspectratio scalediffuse="false">scale</aspectratio>
            <texture diffuse="common/circle.png" background="true">$INFO[ListItem.Icon]</texture>
            <visible>!Skin.HasSetting(global.hidecirles)</visible>
        </control>
        <control type="image">
            <left>10</left>
            <top>10</top>
            <width>100</width>
            <height>100</height>
            <aspectratio scalediffuse="false">keep</aspectratio>
            <texture background="true">$INFO[ListItem.Icon]</texture>
            <visible>Skin.HasSetting(global.hidecirles)</visible>
        </control>
        <control type="label">
            <left>130</left>
            <top>10</top>
            <right>40</right>
            <height>100</height>
            <aligny>center</aligny>
            <font>SmallNavi</font>
            <textcolor>Dark1</textcolor>
            <label>$INFO[ListItem.Label]</label>
        </control>
        <control type="label">
            <left>130</left>
            <top>10</top>
            <right>100</right>
            <align>right</align>
            <height>100</height>
            <aligny>center</aligny>
            <font>SmallNavi</font>
            <textcolor>Dark1</textcolor>
            <label>$INFO[ListItem.Label2]</label>
        </control>
        <control type="label">
			<align>right</align>
			<aligny>center</aligny>
			<top>27</top>
			<width>64</width>
			<centerright>75</centerright>	
			<height>68</height>
			<textcolor>FF888888</textcolor>
			<font>SymbolList</font>
			<label>$VAR[WatchedLabelList]</label>
			<visible>!String.IsEqual(ListItem.Label,..)</visible>
		</control>
    </include>

    <include name="View_52_BigList_FocusLayout">
        <control type="image">
            <left>0</left>
            <right>10</right>
            <height>120</height>
            <texture border="5" colordiffuse="Dark1">common/box.png</texture>
        </control>
        <control type="image">
            <left>10</left>
            <top>10</top>
            <width>100</width>
            <height>100</height>
            <aspectratio scalediffuse="false">scale</aspectratio>
            <texture diffuse="common/circle.png" background="true">$INFO[ListItem.Icon]</texture>
            <visible>!Skin.HasSetting(global.hidecirles)</visible>
        </control>
        <control type="image">
            <left>10</left>
            <top>10</top>
            <width>100</width>
            <height>100</height>
            <aspectratio scalediffuse="false">keep</aspectratio>
            <texture background="true">$INFO[ListItem.Icon]</texture>
            <visible>Skin.HasSetting(global.hidecirles)</visible>
        </control>
        <control type="label">
            <left>130</left>
            <top>10</top>
            <right>40</right>
            <height>100</height>
            <aligny>center</aligny>
            <font>SmallNavi</font>
            <textcolor>Light1</textcolor>
            <label>$INFO[ListItem.Label]</label>
        </control>
        <control type="label">
            <left>130</left>
            <top>10</top>
            <right>100</right>
            <align>right</align>
            <height>100</height>
            <aligny>center</aligny>
            <font>SmallNavi</font>
            <textcolor>Light1</textcolor>
            <label>$INFO[ListItem.Label2]</label>
        </control>
        <control type="label">
			<align>right</align>
			<aligny>center</aligny>
			<top>27</top>
			<width>64</width>
			<centerright>75</centerright>	
			<height>68</height>
			<textcolor>FF888888</textcolor>
			<font>SymbolList</font>
			<label>$VAR[WatchedLabelList]</label>
			<visible>!String.IsEqual(ListItem.Label,..)</visible>
		</control>
    </include>

</includes>
 
